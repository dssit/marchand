<div class="row">
    <div class="search-section">
        <form action="/search">
            <div class="input-group keyword-search">
                <input name="q" class="form-control" placeholder="Search" type="text" value="<%= params[:q] %>">
                <span class="input-group-addon">
				<button type="submit">
					<span class="glyphicon glyphicon-search"></span>
                </button>
                </span>
            </div>
        </form>
        <a data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            <span class="advanced-search">Advanced Search Option</span>
        </a>
        <div class="collapse" id="collapseExample">
            <div class="advanced-search-section">
                <div class="btn-group dropdown-half-width">
                    <button type="button" class="btn btn-default disabale-click" style="width: calc(100% - 45px);">Region</button>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<span class="caret"></span>
						<span class="sr-only">Toggle Dropdown</span>
					</button>
                    <div class="dropdown-menu">
                        <div class="select2-search" style="padding: 12px 15px;">
                            <span class="glyphicon glyphicon-search input-search-icon"></span>
                            <input class="dropdown-search" type="text">
                        </div>
                        <ul class="dropdown-list">
                            <% @regions.each do |region| %>
                                <li>
                                    <a>
                                        <div class="customized-checkbox">
                                            <span><%= region.title %></span>
                                            <input type="checkbox" value="None" name="check">
                                            <label for="customized-checkbox"></label>
                                        </div>
                                    </a>
                                </li>
                                <% end %>
                        </ul>
                    </div>
                </div>
                <div class="btn-group dropdown-half-width">
                    <button type="button" class="btn btn-default disabale-click" style="width: calc(100% - 45px);">Collection</button>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<span class="caret"></span>
										<span class="sr-only">Toggle Dropdown</span>
									</button>
                    <div class="dropdown-menu">
                        <div class="select2-search" style="padding: 12px 15px;">
                            <span class="glyphicon glyphicon-search input-search-icon"></span>
                            <input class="dropdown-search" type="text">
                        </div>
                        <ul class="dropdown-list">
                            <% @collections.each do |collection| %>
                                <li>
                                    <a>
                                        <div class="customized-checkbox">
                                            <span><%= collection.title %></span>
                                            <input type="checkbox" value="None" id="customized-checkbox" name="check">
                                            <label for="customized-checkbox"></label>
                                        </div>
                                    </a>
                                </li>
                                <% end %>
                        </ul>
                    </div>
                </div>
                <div class="btn-group dropdown-full-width">
                    <button type="button" class="btn btn-default disabale-click" style="width: calc(100% - 45px);">Topic/Theme</button>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<span class="caret"></span>
										<span class="sr-only">Toggle Dropdown</span>
									</button>
                    <div class="dropdown-menu">
                        <!-- test -->

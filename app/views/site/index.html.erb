                                            <a style="padding-right:50px !important">
                                                <%= standard.label %>
                                            </a>
                                            <input type="checkbox" value="None" id="customized-checkbox" name="check">
                                            <label for="customized-checkbox" style="right:2%; margin-top:5px !important; margin-right:10px;"></label>
                                        </div>
                                    </div>
                                </li>
                                <% end %>

                </div>
                <div class="btn-group dropdown-half-width">
                    <button type="button" class="btn btn-default disabale-click" style="width: calc(100% - 45px);">Grade Level</button>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<span class="caret"></span>
										<span class="sr-only">Toggle Dropdown</span>
									</button>
                    <div class="dropdown-menu">
                        <div class="select2-search" style="padding: 12px 15px;">
                            <span class="glyphicon glyphicon-search input-search-icon"></span>
                            <input class="dropdown-search" type="text">
                        </div>
                        <ul class="dropdown-list">
                            <% @regions.each do |region| %>
                                <li>
                                    <a>
                                        <div class="customized-checkbox">
                                            <span><%= region.title %></span>
                                            <input class="topic-search" type="checkbox" value="None" name="check">
                                            <label for="customized-checkbox"></label>
                                        </div>
                                    </a>
                                </li>
                                <% end %>
                        </ul>
                    </div>
                </div>
                <div class="btn-group dropdown-half-width">
                    <button type="button" class="btn btn-default disabale-click" style="width: calc(100% - 45px);">Year</button>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<span class="caret"></span>
										<span class="sr-only">Toggle Dropdown</span>
									</button>
                    <div class="dropdown-menu">
                        <div class="select2-search" style="padding: 12px 15px;">
                            <span class="glyphicon glyphicon-search input-search-icon"></span>
                            <input class="dropdown-search" type="text">
                        </div>
                        <ul class="dropdown-list">
                            <% @collections.each do |collection| %>
                                <li>
                                    <a>
                                        <div class="customized-checkbox">
                                            <span><%= collection.title %></span>
                                            <input class="topic-search" type="checkbox" value="None" name="check">
                                            <label for="customized-checkbox"></label>
                                        </div>
                                    </a>
                                </li>
                                <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container image-card-group">
    <h3 class="center" style="font-weight: bold;
text-align: center;
margin-bottom: 35px;
margin-top: 60px;">Featured Collection</h3>
    <% cols = 4 %>
        <% rows = @cards.size / cols %>
            <% for i in 0...rows %>
                <div class="row">
                    <% for j in 0...cols %>
                        <% card = @cards[(cols * i) + j]%>
                            <% thumb = get_thumbnail(card.image) %>
                                <div class="col-xs-3">
                                    <div class="image-card">
                                        <%= link_to image_tag(thumb), search_url(:bestof => true, :topic_id => card.topic_id) %>
                                            <h5 class="text-center">
                                                <%= card.topic.title %>
                                            </h5>
                                    </div>
                                </div>
                                <% end %>
                </div>
                <% end %>
</div>

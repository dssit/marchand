<div id="portrait-modal" class="modal fade vertical-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document" style="width: 950px;">
    <div class="modal-content" style="display: flex;">
    
      <div class="modal-header">
        <div class="image-placeholder">
          <img src="" alt="" />
        </div>
        <div class="button-group" style="position: absolute; bottom: 0;">
          <% if admin? %>
            <a type="button" class="btn btn-default btn-edit" href="#"><span><i class="glyphicon glyphicon-cog"></i></span>Edit</a>
          <% end %>
        </div>
      </div>
      
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <div class="image-info">
          <div class="image-title">
            <h3 class="title"></h3>
            <h5><em class="collection"></em></h5>
            <h5><em class="authors"></em></h5>
          </div>
          <div class="form-inline">
            <label for="shareable-link">Shareable link:</label>
            <input class="form-control" id="shareable-link" type="text" value="" readonly>
            <span id="copy-link" class="btn btn-default" role="button"><i class="glyphicon glyphicon-share"></i> Copy Link</span>
            <a href='' download target='_blank' id="download-image" class="btn btn-default" role="button"><span><i class="glyphicon glyphicon-save"></i></span>Download</a>
          </div>
          <div class="list-section image-id">
            <h5>Image ID: <span class="image_id" style="font-weight: normal;"></span></h5>
          </div>
          <div class="list-section description">
            <h5>Description</h5>
            <p class="card"></p>
          </div>
          <div class="list-section">
            <h5>Topic(s)</h5>
            <ul class="topics"></ul>
          </div>
          <div class="list-section">
            <h5>Region(s)</h5>
            <ul class="regions"></ul>
          </div>
          <div class="list-section">
            <h5>California Standard</h5>
            <ul class="cal-standards"></ul>
          </div>
          <div class="list-section">
            <h5>National Standard</h5>
            <ul class="nat-standards"></ul>
          </div>
          <div class="list-section">
            <h5>Citation</h5>
            <p class="citation"></p>
          </div>
        </div>
      </div>

    </div> <!-- /.modal-content -->
  </div> <!-- /.modal-dialog -->
</div> <!-- /.modal -->
